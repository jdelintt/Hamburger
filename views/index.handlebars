<div class="ui container">
    <div class="ui grid">
        <div class="sixteen wide column">
            <h1>Enter a new burger</h1>

            <div class="ui icon input">
                <input type="text" id="newburger" placeholder="Search...">
                <i class="inverted circular search link icon create-form"></i>
            </div>
        </div>

        <div class="sixteen wide column"></div>
        <div class="sixteen wide column"></div>
        <div class="sixteen wide column"></div>
        <div class="sixteen wide column"></div>

        {{!-- Put the burgers here --}}
        <div class="eight wide column">
            <ul>
                {{#each burgers}}

                {{#unless devoured}}
                <span><strong>
                        {{this.id}} - {{this.burger_name}}
                    </strong></span>

                <button class="circular ui icon button eatburger" id="eatbutton" data-id="{{this.id}}"
                    data-newDevoured="{{devour}}">
                    <i class="gulp icon"></i>
                </button>


                {{/unless}}
                {{/each}}
            </ul>

        </div>
        {{!-- Put the eaten burgers here --}}
        <div class="eight wide column">

            {{#each burgers}}

            {{#if devoured}}
            <span><strong>
                    {{this.id}} - {{this.burger_name}}
                </strong></span>

            <button class="circular ui icon button eatburger" id="eatbutton" data-id="{{this.id}}"
                data-newDevoured="{{devour}}"><span class="fa fa-usd"></span>
                <i class="gulp icon"></i>
            </button>


            {{/if}}
            {{/each}}


        </div>

    </div>
</div>